<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/vendorsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/vendorsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendors List"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:paddingBottom="16dp" />

        <!-- Vendor Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onVendorCardClick"
            android:tag="Book Galaxy"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/vendor1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Galaxy"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 8 years"
                    android:textColor="#555555"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: ★★★★☆"
                    android:textColor="#FFA000"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books: Sci-Fi, Romance, Kids"
                    android:textColor="#333333"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vendor Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onVendorCardClick"
            android:tag="Readers Hub"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/vendor2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Readers Hub"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 5 years"
                    android:textColor="#555555"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: ★★★★☆"
                    android:textColor="#FFA000"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books: Biography, Fiction, Science"
                    android:textColor="#333333"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vendor Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onVendorCardClick"
            android:tag="Fiction Avenue"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/vendor3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiction Avenue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 10 years"
                    android:textColor="#555555"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: ★★★★☆"
                    android:textColor="#FFA000"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books: Biography, Fiction, Science"
                    android:textColor="#333333"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vendor Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onVendorCardClick"
            android:tag="The Storyteller’s Shelf"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/vendor4Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Storyteller’s Shelf"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 4 years"
                    android:textColor="#555555"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: ★★★★☆"
                    android:textColor="#FFA000"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books: Historical Fiction, Essays, Narrative Non-Fiction"
                    android:textColor="#333333"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vendor Card 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onVendorCardClick"
            android:tag="BookBarn Express"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/vendor5Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BookBarn Express"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 12 years"
                    android:textColor="#555555"
                    android:paddingTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: ★★★☆☆"
                    android:textColor="#FFA000"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books: Business, Economics, Political Science"
                    android:textColor="#333333"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>